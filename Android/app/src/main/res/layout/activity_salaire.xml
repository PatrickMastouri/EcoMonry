<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/grad"
    tools:context=".Salaire">


    <TextView
        android:id="@+id/textView5"
        android:layout_width="235dp"
        android:layout_height="52dp"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/bangers"
        android:text="Add salary"
        android:textSize="35sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <org.angmarch.views.NiceSpinner
        android:id="@+id/niceSpinnerXml"
        android:layout_width="135dp"
        android:layout_height="44dp"
        android:layout_marginTop="84dp"
        android:layout_marginEnd="100dp"
        android:layout_marginRight="100dp"
        android:background="@drawable/round_border"
        android:drawablePadding="16dp"
        android:ems="10"
        android:fontFamily="@font/bangers"
        app:entries="@array/courses"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/salaire" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="156dp"
        android:layout_height="58dp"
        android:layout_marginTop="84dp"
        android:fontFamily="@font/bangers"
        android:gravity="center"
        android:text="how do i get payed"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/niceSpinnerXml"
        app:layout_constraintHorizontal_bias="0.105"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/salaire" />


    <EditText
        android:id="@+id/salaire"
        android:layout_width="245dp"
        android:layout_height="48dp"
        android:layout_marginTop="84dp"
        android:background="@drawable/round_border"
        android:drawablePadding="16dp"
        android:ems="10"
        android:fontFamily="@font/bangers"
        android:hint="salaire"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.397"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <Button
        android:id="@+id/addSalaire"
        android:layout_width="122dp"
        android:layout_height="60dp"
        android:background="@drawable/round_bg"
        android:text="Add"
        android:fontFamily="@font/bangers"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/niceSpinnerXml" />


</androidx.constraintlayout.widget.ConstraintLayout>