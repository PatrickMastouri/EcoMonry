<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/grad"
    tools:context=".EditSalaire">



    <TextView
        android:id="@+id/textView5"
        android:layout_width="235dp"
        android:layout_height="52dp"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/bangers"
        android:text="Edit ur salary !"
        android:textSize="35sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



    <org.angmarch.views.NiceSpinner
        android:id="@+id/niceSpinnerXml"
        android:layout_width="159dp"
        android:layout_height="60dp"
        android:layout_marginTop="84dp"
        android:layout_marginEnd="84dp"
        android:layout_marginRight="84dp"
        android:fontFamily="@font/bangers"
        app:entries="@array/courses"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Nsalaire" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="150dp"
        android:layout_height="57dp"
        android:layout_marginTop="84dp"
        android:fontFamily="@font/bangers"
        android:gravity="center"
        android:text="how do i get payed"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/niceSpinnerXml"
        app:layout_constraintHorizontal_bias="0.105"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Nsalaire" />


    <EditText
        android:id="@+id/Nsalaire"
        android:layout_width="241dp"
        android:layout_height="55dp"
        android:layout_marginTop="120dp"
        android:background="@drawable/round_border"
        android:drawablePadding="16dp"
        android:ems="10"
        android:hint="New salaire"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.482"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <Button
        android:id="@+id/EditSalaire"
        android:layout_width="142dp"
        android:layout_height="67dp"
        android:background="@drawable/round_bg"
        android:fontFamily="@font/bangers"
        android:text="Edit"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/niceSpinnerXml" />



</androidx.constraintlayout.widget.ConstraintLayout>